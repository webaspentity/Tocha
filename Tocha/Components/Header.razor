<header class="header">
    <Container Class="header__container">
        <Logo />
        <Menu LoginButtonClick="OnLoginClick" RegistrationButtonClick="OnRegistrationClick" @ref=AppData.Menu MenuClick="MenuClick"/>
        <Burger OnClick="OnBurgerClick" @ref=AppData.Burger/>
    </Container>
</header>

@code {
    [Parameter]
    public EventCallback LoginClick { get; set; }

    [Parameter]
    public EventCallback RegistrationClick { get; set; }

    private void OnBurgerClick()
    {
        AppData.BurgerActive = !AppData.BurgerActive;
        if (AppData.BurgerActive)
        {
            AppData.Menu.Open = true;
        }
        else
        {
            AppData.Menu.Open = false;
        }
    }

    private void OnLoginClick()
    {
        if (AppData.Menu.Open) AppData.Menu.Open = false;
        LoginClick.InvokeAsync();
    }

    private void OnRegistrationClick()
    {
        if (AppData.Menu.Open) AppData.Menu.Open = false;
        RegistrationClick.InvokeAsync();
    }

    private void MenuClick()
    {
        OnBurgerClick();
    }
}
