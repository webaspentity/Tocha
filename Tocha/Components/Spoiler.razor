<div class=@((open) ? "spoiler open" : "spoiler")>
    <button class=@((disabled) ? "spoiler__title disabled" : "spoiler__title") @onclick="@( ()=> open = !open )" disabled=@disabled>@Title</button>
    <div class="spoiler__content">@ChildContent</div>
</div>

@code {
    private bool open = true;
    private bool disabled;

    [Parameter]
    public string? Title { get; set; }
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    [Parameter]
    public bool Disabled 
    { 
        get => disabled; 
        set
        {
            disabled = value;
            if (value) open = true;
        }
    }
}
